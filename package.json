{
  "name": "niptado",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "dev": "npx concurrently 'npm run dev:frontend' 'npm run dev:backend' 'npm run cron'",
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "dev:backend": "npm --workspace apps/backend run dev",
    "cron": "npm --workspace apps/backend run cron"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "dotenv": "^17.2.1",
    "prisma": "^6.14.0"
  }
}
