{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register server/index.ts",
    "server": "ts-node server/index.ts",
    "cron": "ts-node src/cron-worker.ts"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.2.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "tsconfig-paths": "^4.2.0"
  }
}
